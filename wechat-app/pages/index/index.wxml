<!--index.wxml-->
<view class="page">
  <view class="page_hd">
    <view class="page_title"></view>
  </view>

  <view class="page_bd">
    <view class="weui-cell">
      <view class="weui-cell_hd">
        <label class="weui-label">用户名</label>
      </view>
      <view class="weui-cell_bd weui-flex">
        <input type="text" class="weui_input" placeholder="注册时输入的用户名" model:value="{{username}}"></input>
      </view>
    </view>
    <view class="weui-cell">
      <view class="weui-cell_hd">
        <label class="weui-label">密码</label>
      </view>
      <view class="weui-cell_bd weui-flex">
        <input type="password" class="weui_input" placeholder="8-15位密码" model:value="{{password}}"></input>
      </view>
    </view>

    <button class="weui-btn" type="primary" bindtap="login">登录</button>
  </view>

  <view class="page_bt">
  
  </view>
</view>
